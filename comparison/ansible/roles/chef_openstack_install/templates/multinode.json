{
  "name": "multinode",
  "default_attributes": {
    "apache": {
      "listen": [

      ]
    },
    "yum": {
      "epel": {
        "enabled": false
      }
    }
  },
  "override_attributes": {
{%- if ansible_os_family == 'Debian' and not ansible_distribution_release == 'xenial' %}
    "mariadb": {
      "install": {
         "version": "10.1"
      },
      "use_default_repository":false,
      "apt_repository": {
         "base_url": "nyc2.mirrors.digitalocean.com/mariadb/repo/"
      }
    },
    "rabbitmq": {
       "version": "3.6.10"
    },
{%- endif %}
    "openstack": {
{%- if ansible_os_family == 'Debian' and not ansible_distribution_release == 'xenial' %}
      "block-storage": {
         "platform": {
            "cinder_iscsitarget_packages": [ "targetcli-fb" ]
         }
      },
{%- endif %}
      "is_release": true,
      "network_lbaas": {
        "enabled": false
      },
      "apt": {
        "live_updates_enabled": false,
        "unattended_upgrades": {
          "enable": false
        },
        "update_apt_cache": true
      },
      "sysctl": {
        "net.ipv4.ip_forward": 1
      },
      "endpoints": {
        "db": {
          "host": "{{ host_0_address }}"
        },
        "mq": {
          "host": "{{ host_0_address }}"
        },
        "admin": {
          "identity": {
            "server_host": "{{ host_0_address }}",
            "host": "{{ host_0_address }}"
          },
          "network": {
            "host": "{{ host_0_address }}"
          },
          "image_api": {
            "host": "{{ host_0_address }}"
          },
          "image_registry": {
            "host": "{{ host_0_address }}"
          },
          "block-storage": {
            "host": "{{ host_0_address }}"
          },
          "compute-api": {
            "host": "{{ host_0_address }}"
          },
          "compute-metadata-api": {
            "host": "{{ host_0_address }}"
          },
          "compute-novnc": {
            "host": "{{ host_0_address }}"
          },
          "orchestration-api": {
            "host": "{{ host_0_address }}"
          },
          "orchestration-api-cfn": {
            "host": "{{ host_0_address }}"
          },
          "placement-api": {
            "host": "{{ host_0_address }}"
          }
        },
        "internal": {
          "identity": {
            "host": "{{ host_0_address }}"
          },
          "network": {
            "host": "{{ host_0_address }}"
          },
          "image_api": {
            "host": "{{ host_0_address }}"
          },
          "image_registry": {
            "host": "{{ host_0_address }}"
          },
          "block-storage": {
            "host": "{{ host_0_address }}"
          },
          "compute-api": {
            "host": "{{ host_0_address }}"
          },
          "compute-metadata-api": {
            "host": "{{ host_0_address }}"
          },
          "compute-novnc": {
            "host": "{{ host_0_address }}"
          },
          "orchestration-api": {
            "host": "{{ host_0_address }}"
          },
          "orchestration-api-cfn": {
            "host": "{{ host_0_address }}"
          },
          "placement-api": {
            "host": "{{ host_0_address }}"
          }
        },
        "public": {
          "identity": {
            "host": "{{ host_0_address }}"
          },
          "network": {
            "host": "{{ host_0_address }}"
          },
          "image_api": {
            "host": "{{ host_0_address }}"
          },
          "image_registry": {
            "host": "{{ host_0_address }}"
          },
          "block-storage": {
            "host": "{{ host_0_address }}"
          },
          "compute-api": {
            "host": "{{ host_0_address }}"
          },
          "compute-metadata-api": {
            "host": "{{ host_0_address }}"
          },
          "compute-novnc": {
            "host": "{{ host_0_address }}"
          },
          "orchestration-api": {
            "host": "{{ host_0_address }}"
          },
          "orchestration-api-cfn": {
            "host": "{{ host_0_address }}"
          },
          "placement-api": {
            "host": "{{ host_0_address }}"
          }
        }
      },
      "bind_service": {
        "db": {
          "host": "{{ host_0_address }}"
        },
        "mq": {
          "host": "{{ host_0_address }}"
        },
        "public": {
          "identity": {
            "host": "{{ host_0_address }}"
           }
        },
        "main": {
          "identity": {
            "host": "0.0.0.0"
          }
        },
        "admin": {
          "identity": {
            "host": "0.0.0.0"
          }
        },
        "all": {
          "network": {
            "host": "0.0.0.0"
          },
          "image_api": {
            "host": "0.0.0.0"
          },
          "image_registry": {
            "host": "0.0.0.0"
          },
          "block-storage": {
            "host": "0.0.0.0"
          },
          "compute-api": {
            "host": "0.0.0.0"
          },
          "compute-metadata-api": {
            "host": "0.0.0.0"
          },
          "compute-novnc": {
            "host": "0.0.0.0"
          },
          "orchestration-api": {
            "host": "0.0.0.0"
          },
          "orchestration-api-cfn": {
            "host": "0.0.0.0"
          },
          "placement-api": {
            "host": "0.0.0.0"
          }
        }
      },
      "dashboard": {
        "server_hostname": "{{ host_0_address }}"
      },
      "mq": {
        "user": "admin"
      },
      "network": {
        "plugins": {
{% if vpp_network %}
          "ml2_vpp": {
            "conf": {
              "ml2_type_vlan": {
                "vlan_ranges": "1000:2000"
              },
              "ml2_vpp": {
                "jwt_signing": "False",
                "etcd_insecure_explicit_disable_https": "True",
                "l3_hosts": "{{hostvars[groups['etcd'][0]].ansible_bond0.ipv4.address}}",
                "gpe_locators ": "=",
                "gpe_src_cidr ": "=",
                "enable_vpp_restart ": "= False",
                "etcd_pass ": "=",
                "etcd_user ": "=",
                "etcd_port ": "= 2379",
                "etcd_host ": "= 147.75.39.95",
                "physnets ": "physnet:{{ vlan_interface }}"
              }
            }
          }
{% else %}
          "ml2_openvswitch": {
            "conf": {
              "ml2_type_vlan": {
                "vlan_ranges": "1000:2000"
              }
            }
          }
{% endif %}
        },
        "vlan_network_bridge_interface": "{{ vlan_interface }}",
        "tun_network_bridge_interface": "bond0",
        "conf": {
          "DEFAULT": {
            "service_plugins": "router"
          },
          "transport_url": {
            "rabbit_host": "{{ host_0_address }}"
          },
          "ml2": {
            "tenant_network_types": "vlan"
          }
        }
      },
      "image": {
        "image_upload": true
      },
      "compute": {
        "conf": {
          "libvirt": {
            "virt_type": "kvm",
            "cpu_type": "passthrough"
          },
          "transport_url": {
            "rabbit_host": "{{ host_0_address }}"
          }
        }
      },
      "mysql": {
        "max_connections": 1451
      }
    }
  }
}
